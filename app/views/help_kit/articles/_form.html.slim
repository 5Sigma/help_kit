= simple_form_for @article, url: url do |f|
  =f.input :title, label: false
  =f.text_area :content, class: 'markdown', rows: 30, cols: 80
  .form-actions
    =f.submit 'Create Article'
-simple_form_for @article, url: url, remote: true do |f|
  =f.input :category_id,
    collection: category_options(@category),
    prompt: 'No Category',
    label: 'Category'
  =f.input :description, input_html: { rows: 3 }
